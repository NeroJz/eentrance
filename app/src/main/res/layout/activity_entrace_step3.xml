<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hk.com.uatech.eticket.eticket.EntraceStep3Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2b2b2b"
            android:visibility="gone"
            app:srcCompat="@mipmap/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/imgInvalid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:paddingBottom="0dp"

                    android:paddingTop="0dp"
                    app:srcCompat="@mipmap/invalid" />

                <ImageView
                    android:id="@+id/imgValid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:paddingBottom="0dp"

                    android:paddingTop="0dp"
                    app:srcCompat="@mipmap/valid" />

                <LinearLayout
                    android:id="@+id/bglayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f4f4f4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/movieTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Guardians Of the Galaxy Vol. 2"
                        android:textAlignment="center"
                        android:textColor="#b4924b"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/cinemaName"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:text="House 2"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/showDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="20 January 2017 (Wed)"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/showTime"
                            android:layout_width="63dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="12:20pm"

                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ticketContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"></LinearLayout>

                    <TextView
                        android:id="@+id/adultnormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:visibility="gone"
                        android:inputType="textPersonName"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"

                        android:text="Adult Normal"
                        android:textColor="#aaaaaa"
                        android:textSize="14sp" />


                    <GridView
                        android:id="@+id/gvAdult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnWidth="120dp"
                        android:visibility="gone"

                        android:horizontalSpacing="3dp"
                        android:numColumns="auto_fit"
                        android:paddingLeft="10dp"
                        android:stretchMode="columnWidth"

                        />


                    <TextView
                        android:id="@+id/amexbigi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:visibility="gone"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="Amex Bigi"
                        android:textColor="#aaaaaa"
                        android:textSize="14sp" />


                    <GridView
                        android:id="@+id/gvBigi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:id="@+id/editText10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:visibility="gone"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="Child"
                        android:textColor="#aaaaaa"
                        android:textSize="14sp" />

                    <GridView
                        android:id="@+id/gvChild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingLeft="10dp" />


                    <TextView
                        android:id="@+id/editText12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:visibility="gone"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:text="Senior"
                        android:textColor="#aaaaaa"
                        android:textSize="14sp" />

                    <GridView
                        android:id="@+id/gvSenior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingLeft="10dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#f4f4f4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp"
                        android:paddingEnd="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp">

                        <Button
                            android:id="@+id/btnEnter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#09453C"
                            android:textColor="#fff"
                            android:layout_marginRight="5dp"
                            android:text="ENTER"
                            android:onClick="enterHandler"
                            ></Button>

                        <Button
                            android:id="@+id/btnExit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#FFFFFF"
                            android:textColor="#09453C"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:onClick="exitHandler"
                            android:text="EXIT"></Button>

                        <Button
                            android:id="@+id/btnCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#bbb"
                            android:textColor="#fff"
                            android:layout_marginLeft="5dp"
                            android:onClick="cancelHandler"
                            android:text="CANCEL"></Button>

                    </LinearLayout>


                    <LinearLayout
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp"
                        android:paddingEnd="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp">

                        <ImageView
                            android:id="@+id/confirm"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"

                            android:scaleType="centerCrop"
                            android:text="Confirm"
                            app:srcCompat="@mipmap/confirm" />

                        <ImageView
                            android:id="@+id/cancel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:text="Cancel"
                            app:srcCompat="@mipmap/cancel2" />

                    </LinearLayout>



                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=" " />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
